    <!--primary hero container-->
    <div class="hero is-fullheight is-primary">
         <div class="box m-3">
                I'm in a box.
            </div>
        <div class="hero-body">
           
            <!--tiles container-->
            <div class="tile is-ancestor">
                <!--Vertical Tile -->
                <div class="tile is-parent is-vertical is-4 is-primary">
                    <!--Users-->
                    <article class="tile is-child notification is-light is-12">
                    <article class="panel is-primary">
                        <p class="panel-heading">Users</p>
                        <div class="panel-block">
                            <p class="control has-icons-left">
                            <input class="input is-primary" type="text" placeholder="Search">
                            <span class="icon is-left">
                            <i class="fas fa-search" aria-hidden="true"></i>
                            </span>
                            </p>
                        </div>
                        <!--hbs-->
                            {{#each users as |user| }}
                            <a class="panel-block" href="/user/{{user.id}}">{{user.username}}</a>
                            {{/each}}
                        </article>


                        <!--Books-->
                        <article class="panel is-primary">
                        <p class="panel-heading">Books</p>
                            <div class="panel-block">
                                <p class="control has-icons-left">
                                    <input class="input is-primary" type="text" placeholder="Search">
                                    <span class="icon is-left">
                                    <i class="fas fa-search" aria-hidden="true"></i>
                                    </span>
                                </p>
                            </div>
                            <!--hbs-->
                            {{#each books as |book| }}
                            <a class="panel-block" href="/book/{{book.id}}">{{book.title}}</a>
                            {{/each}}
                        </article>
                    </article>
                </div>
                

                <!--RecentlyRead-->
                <div class="tile is-parent notification is-warning m-3 ">
                    <section class="section">
                        <h1 class="title">Recently Read:</h1>
                        {{#if logged_in_user.user_books.length}}
                        {{#each logged_in_user.user_books as |book|}}
                            <h2><a href="/book/{{book.id}}">{{book.title}}</a></h2>
                                <p>{{book.author}}</p>
                        {{/each}}
                        {{/if}}
                    </section>
                </div>
              

                <!--Favorites-->
                <div class="tile is-parent notification is-danger m-3">
                    <section class="section">
                        <h1 class="title">Favorites:</h1>
                        <h2 class="subtitle">
                            A simple container to divide your page into <strong>sections</strong>, like the one
                            you're
                            currently
                            reading.
                        </h2>
                    </section>
                </div>
            </div>
        </div>

    </div>
    </div>

   
