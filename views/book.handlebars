    <div class="hero is-fullheight is-primary">
        <div class="box m-3">
                <strong>Title</strong> {{currentBook.title}} <strong>Author</strong> {{currentBook.author}} 
            </div>
        <div class="hero-body">
            <!--tiles container-->
            <div class="tile is-ancestor">
                <!-- All other tile elements -->
                <div class="tile is-parent is-vertical is-4 is-primary">
                    <article class="tile is-child notification is-light is-12">
                        <article class="panel is-primary">
                            <p class="panel-heading">
                                Users
                            </p>

                            <div class="panel-block">
                                <p class="control has-icons-left">
                                    <input class="input is-primary" type="text" placeholder="Search">
                                    <span class="icon is-left">
                                        <i class="fas fa-search" aria-hidden="true"></i>
                                    </span>
                                </p>
                            </div>

                            {{#each users as |user| }}
                            <a class="panel-block" href="/user/{{user.id}}">{{user.username}}</a>
                            {{/each}}
                        </article>

                        <article class="panel is-primary">
                            <p class="panel-heading">
                                Books
                            </p>

                            <div class="panel-block">
                                <p class="control has-icons-left">
                                    <input class="input is-primary" type="text" placeholder="Search">
                                    <span class="icon is-left">
                                        <i class="fas fa-search" aria-hidden="true"></i>
                                    </span>
                                </p>
                            </div>
                            {{#each books as |book| }}
                                <a class="panel-block" href="/book/{{book.id}}">{{book.title}}</a>
                            {{/each}}
                        </article>
                        <button class="button is-danger mt-2 add-book">Add Book</button>
                    </article>

                </div>
